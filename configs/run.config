/*
 * Production run config (HPC with Slurm)
 */

process {
    executor = 'slurm'
    queue    = 'defq'
    cpus     = 1
    memory   = '8 GB'
    time     = '24h'
    scratch  = true

    // GPU label
    withLabel: gpu {
        cpus   = 4
        memory = '32 GB'
        time   = '48h'
        clusterOptions = '--gres=gpu:1'
    }
}

executor {
    queueSize       = 10
    submitRateLimit = '1 sec'
    pollInterval    = '60 sec'
}

workDir = '/scratch/$USER/nextflow_work'
cleanup = true
resume  = true

singularity {
    enabled    = true
    autoMounts = true
    cacheDir   = '/scratch/$USER/.singularity_cache'
}

// --- Reporting ---
timeline {
    enabled = true
    file    = 'logs/timeline.html'
}

report {
    enabled = true
    file    = 'logs/report.html'
}

trace {
    enabled = true
    file    = 'logs/trace.txt'
}

dag {
    enabled = true
    file    = 'logs/dag.png'
}
